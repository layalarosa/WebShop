@model IEnumerable<WebShop.Models.Game>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Web Shop</title>

</head>
<body>
    @foreach (var game in Model)
    {
        <div>
            <h2>@game.Name</h2>
            <h3>@game.Price.ToString("c")</h3>
            @*<h4>@game.Category.CategoryName</h4>*@
        </div>

    }

</body>
</html>